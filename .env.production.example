# MCP OCI OPSI Server - Production Configuration
# Copy this file to .env.production and configure your values

# =============================================================================
# Server Mode (Production)
# =============================================================================
MCP_TRANSPORT=http
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8000
MCP_VERSION=v2
MCP_DEBUG=0

# =============================================================================
# OCI Authentication (API Key fallback)
# =============================================================================
OCI_CLI_PROFILE=production
OCI_REGION=us-phoenix-1
OCI_COMPARTMENT_ID=[Link to Secure Variable: OCI_COMPARTMENT_ID]

# =============================================================================
# OpenTelemetry (optional)
# =============================================================================
# OCI APM (Production)
OCI_APM_ENDPOINT=[Link to Secure Variable: OCI_APM_ENDPOINT]
OCI_APM_PRIVATE_DATA_KEY=[Link to Secure Variable: OCI_APM_PRIVATE_DATA_KEY]
OTEL_DISABLE_LOCAL=true

# Or use a generic OTLP endpoint
# OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317

# =============================================================================
# OAuth Configuration (Required for production)
# =============================================================================
FASTMCP_OAUTH_ENABLED=1

# OCI IAM OAuth settings
FASTMCP_SERVER_AUTH_OCI_IAM_GUID=[Link to Secure Variable: FASTMCP_SERVER_AUTH_OCI_IAM_GUID]
FASTMCP_SERVER_AUTH_OCI_CONFIG_URL=[Link to Secure Variable: FASTMCP_SERVER_AUTH_OCI_CONFIG_URL]
FASTMCP_SERVER_AUTH_OCI_CLIENT_ID=[Link to Secure Variable: FASTMCP_SERVER_AUTH_OCI_CLIENT_ID]
FASTMCP_SERVER_AUTH_OCI_CLIENT_SECRET=[Link to Secure Variable: FASTMCP_SERVER_AUTH_OCI_CLIENT_SECRET]

# Public URL (must match OAuth redirect URL configuration)
FASTMCP_SERVER_BASE_URL=[Link to Secure Variable: FASTMCP_SERVER_BASE_URL]

# Security keys (generate unique values for each environment)
JWT_SIGNING_KEY=[Link to Secure Variable: JWT_SIGNING_KEY]
STORAGE_ENCRYPTION_KEY=[Link to Secure Variable: STORAGE_ENCRYPTION_KEY]

# =============================================================================
# Production Settings
# =============================================================================
# Cache settings
MCP_CACHE_MAX_AGE_HOURS=24
MCP_CACHE_DIR=[Link to Secure Variable: MCP_CACHE_DIR]
MCP_CACHE_BACKEND=[Link to Secure Variable: MCP_CACHE_BACKEND]
MCP_REDIS_URL=[Link to Secure Variable: MCP_REDIS_URL]
MCP_CACHE_KEY_PREFIX=[Link to Secure Variable: MCP_CACHE_KEY_PREFIX]

# OAuth token storage (use persistent volume in production)
MCP_OAUTH_STORAGE_PATH=/data/oauth
